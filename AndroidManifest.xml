<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.realsimpleapps.desert.code.camp"
	android:versionCode="201211131"
	android:versionName="1.0.0" >

	<uses-sdk
		android:minSdkVersion="7"
		android:targetSdkVersion="16" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

	<uses-feature
		android:name="android.hardware.location"
		android:required="false" />

	<application
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/CCTheme.ActionBarOrange" >
		<activity
			android:name="com.realsimpleapps.desertcodecamp.FilterListActivity"
			android:uiOptions="splitActionBarWhenNarrow" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	
		<activity
			android:name="com.realsimpleapps.desertcodecamp.FilteredSessionsListActivity"
			android:uiOptions="splitActionBarWhenNarrow" />
		<activity
			android:name="com.realsimpleapps.desertcodecamp.MySessionsListActivity"
			android:uiOptions="splitActionBarWhenNarrow" />
		<activity
			android:name="com.realsimpleapps.desertcodecamp.MyScheduleListActivity"
			android:uiOptions="splitActionBarWhenNarrow" />
		<activity
			android:name="com.realsimpleapps.desertcodecamp.AboutActivity" />
	</application>

</manifest>