<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- Due to limitations in Android's theming system any theme customizations must be declared in two attributes -->

	<style name="CCTheme.ActionBarOrange" parent="android:Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/CCTheme.ActionBarStyle.CCOrangeBackground</item>
		<item name="android:actionMenuTextAppearance">@style/CCTheme.ActionBar.MenuTextAppearance.Default</item>
	</style>

	<style name="CCTheme.ActionBarLight" parent="android:Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/CCTheme.ActionBarStyle.LightBackground</item>
		<item name="android:actionMenuTextAppearance">@style/CCTheme.ActionBar.MenuTextAppearance.Default</item>
	</style>

	<style name="CCTheme.ActionBarStyle.CCOrangeBackground" parent="android:Widget.ActionBar">
		<item name="android:background">#DD4814</item>
		<item name="android:titleTextStyle">@style/CCTheme.ActionBar.TextAppearance.Default</item>
	</style>

	<style name="CCTheme.ActionBarStyle.LightBackground" parent="android:Widget.ActionBar">
		<item name="android:background">#DEDEDE</item>
		<item name="android:titleTextStyle">@style/CCTheme.ActionBar.TextAppearance.Default</item>
	</style>

	<style name="CCTheme.ActionBar.TextAppearance.Default" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textSize">17sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#FFF</item>
	</style>

	<style name="CCTheme.ActionBar.MenuTextAppearance.Default" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
		<item name="android:textSize">15sp</item>
		<item name="android:textAllCaps">false</item>
	</style>

</resources>